<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @account do |f| %>

      <!--%= render 'shared/error_messages', object: f.object %-->
            
  <H3> Account Information </H3>
      
      <table border="0" bordercolor= "transparent" width="100%">
      	<tr>
      		<td> <%= f.label :"email" %> </td> 
      		<td><%= f.text_field :user_id %> </td> 
      	</tr>

      	<tr>
      		<td><%= f.label :password %></td>
      		<td><%= f.password_field :password %></td>
		</tr>

		<tr>
		    <td><%= f.label :password_confirmation, "Password Confirmation" %></td>
      		<td><%= f.password_field :password_confirmation %></td>
		</tr>      		
	  </table>
      </p>
      <hr/>
	  
	  <H3> Home Address</H3>
       <%= f.fields_for :address do |address_fields| %>    	
       <table border="0" bordercolor= "transparent">
      	<tr>
      		<td>Street Address: </td>
      		<td colspan="6"><%= address_fields.text_field :address1 %> </td>
      	</tr>
      	<tr>
      		<td>Apt/Suite:</td>
      		<td colspan="6"><%= address_fields.text_field :address2 %> </td>
      	</tr>
       	 
	    <tr>
       		<td>City:</td><td><%= address_fields.text_field :city, :size=>10%> </td>
       		<td>State:</td> <td> <%= address_fields.select :state, [['PA','PA'],['CA','CA']] ,:size=>2%> </td>
       		<td>Zip Code:</td> <td> <%= address_fields.text_field :zip %> </td>
       	 </tr>
      </table>
       <% end %>
       <hr/>
       <br>
       <H3> Student Information</H3>
       <%= f.fields_for :students do |student_fields| %>
	       <%= student_fields.fields_for :contact do |student_contact_fields| %> 	       	
	       		First Name :<%=student_contact_fields.text_field :first_name %> <br>
	       		M.I :<%=student_contact_fields.text_field :middle_name %> <br>
	       		Last Name :<%=student_contact_fields.text_field :last_name %><br>
				Gender: <%= student_contact_fields.select :gender,[['Female','Female'],['male','male']]%><br>
				Birthday:<%= student_contact_fields.text_field :birthday%><br>
				Email:<%= student_contact_fields.text_field :email%><br>
	       <% end %>
	       Grade :<%=student_fields.select :grade,[['PK1','PK1'],['PK2','PK2'],['K','K']] %> <br>
	       School Year Start :<%=student_fields.text_field :school_year_start %> <br>
	       School Year End :<%=student_fields.text_field :school_year_end %> <br>
       <% end %>

       <H3> Parent/Guardian Information </H3>
       <%= f.fields_for :guardian do |guardian_fields| %>
	       <%= guardian_fields.fields_for :contact do |contact_fields| %> 	       	
	       		First Name :<%=contact_fields.text_field :first_name %> <br>
	       		M.I :<%=contact_fields.text_field :middle_name %> <br>
	       		Last Name :<%=contact_fields.text_field :last_name %><br>
				Email:<%= contact_fields.text_field :email%><br>
				Home Phone:<%= contact_fields.text_field :home_phone%><br>
				Cell Phone:<%= contact_fields.text_field :alt_phone%><br>
	       <% end %>
       <% end %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<br>